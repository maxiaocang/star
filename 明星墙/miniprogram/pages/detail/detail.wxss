.img{
  width: 750rpx;
  height: 800rpx;
}
.img image{
  width: 100%;
  height: 100%;
}
.user{
  display: flex;
  padding: 30rpx;
}
.user image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 10rpx;
}
.user .msg{
  display: flex;
  flex-direction: column;
}
.user .msg text:nth-child(1){
  color: #496681;
}
.user .msg text:nth-child(2){
  font-size: 14px;
  color: #969696;
}
.dsc{
  padding: 30rpx;
  text-indent: 2em;
  font-size: 16px;
  line-height: 50rpx;
}